<div class="row">
  <div class="container">
    <div class="col-md-6">
    <h1>ToDos NO Completados</h1>
      <% @todos.each do |todo| %>
        <% if !(todo.completed) %>
        <ul>
          <li> <%= todo.id %></li>
          <li> <%= todo.description %> </li>
          <li> <%= todo.completed %> </li>
        </ul>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-6">
      <h1>ToDos Completados</h1>
        <% @todos.each do |todo| %>
          <% if todo.completed %>
          <ul>
            <li> <%= todo.id %></li>
            <li> <%= todo.description %> </li>
            <li> <%= todo.completed %> </li>
          </ul>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
