<div class="row">
  <div class="container">
    <div class="col-md-6">
    <h1>ToDos NO Completados</h1>
    <table class="table  table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Descripción</th>
          <th>Estado</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @todos.each do |todo| %>
        <% if !(todo.completed) %>
        <tr>
          <td> <%= todo.id %> </td>
          <td> <%= todo.description %> </td>
          <td> <%= todo.completed %> </td>
        </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
    </div>
    <div class="col-md-6">
      <h1>ToDos Completados</h1>
      <table class="table  table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @todos.each do |todo| %>
          <% if todo.completed %>
          <tr>
            <td> <%= todo.id %> </td>
            <td> <%= todo.description %> </td>
            <td> <%= todo.completed %> </td>
          </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
