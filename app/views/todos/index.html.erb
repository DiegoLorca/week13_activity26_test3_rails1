<h1>Listado de ToDo</h1>
  <div class="well">
        <table class="table">
          <thead>
            <tr>
              <th>Descripci√≥n</th>
              <th>Estado</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @todos.each do |todo| %>
            <tr>
              <td> <%= todo.description %> </td>
              <td> <%= todo.completed %> </td>
              <td> <%= link_to 'Completado', complete_path(todo), class: "btn btn-info mr-5" %> </td>
              <td> <%= link_to 'Ver', todo %> </td>
              <td> <%= link_to 'Editar', edit_todo_path(todo) %> </td>
              <td> <%= link_to 'Borrar', todo, method: :delete %> </td>
            </tr>
            <% end %>
          </tbody>
        </table>

  </div>
  <div class="container">
    <%= link_to "Crear un ToDo nuevo", todos_new_path, class: "btn btn-primary btn-lg btn-block" %>
  </div>
